<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/button_secondary_background">

    <TextView
        android:id="@+id/titleTextView"
        android:text="Lets Beigin!"
        android:textSize="25sp"
        android:textColor="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"/>

    <TextView
        android:id="@+id/subtitleTextView"
        android:text="It's time to take action against waste accumulation! Click the 'Start Garbage Collection ' button to kickstart the waste collection process."
        android:textSize="18sp"
        android:textColor="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:text="Start Garbage Collection"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:fontFamily="@font/sf_pro_display_bold"/>

    <TextView
        android:id="@+id/startLaterLink"
        android:text="Start Later"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/gray"
        android:fontFamily="@font/sf_pro_display_regular"/>

</LinearLayout>
