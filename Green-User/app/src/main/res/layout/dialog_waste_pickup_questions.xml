<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/button_white_background">

    <TextView
        android:id="@+id/titleTextView"
        android:text="Schedule Pickup"
        android:textSize="25sp"
        android:textColor="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"/>

    <TextView
        android:id="@+id/subtitleTextView"
        android:text="Schedule for tomorrow's pickup"
        android:textSize="18sp"
        android:textColor="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"/>


    <TextView
        android:id="@+id/title2TextView"
        android:text="Is your garbage Recyclable ?"
        android:textSize="25sp"
        android:textColor="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yesButton"
        android:text="Yes"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:fontFamily="@font/sf_pro_display_bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/partialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_secondary_background"
        android:elevation="0dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:padding="18dp"
        android:stateListAnimator="@null"
        android:text="Partial"
        android:textAllCaps="false"
        android:textColor="@color/darkgray"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/noButton"
        android:text="No"
        android:textSize="18sp"
        android:background="@drawable/button_secondary_background"
        android:textColor="@color/darkgray"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:fontFamily="@font/sf_pro_display_bold"/>



    <TextView
        android:id="@+id/notSureLink"
        android:text="Not sure"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/gray"
        android:fontFamily="@font/sf_pro_display_regular"/>

</LinearLayout>
